<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="16dp"
              android:paddingBottom="16dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Address:"
            android:id="@+id/dviceAddressTitle"
            android:textSize="16sp"
            android:textColor="@color/material_grey_900"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00:00:00:00"
            android:id="@+id/deviceAddress"
            android:textSize="16sp"
            android:textColor="@color/material_grey_900"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UUID:"
            android:id="@+id/uuidTitle"
            android:textSize="16sp"
            android:textColor="@color/material_grey_900"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00000000000000000000000000000000"
            android:id="@+id/uuid"
            android:textSize="16sp"
            android:textColor="@color/material_grey_900"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="160dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Major:"
                android:id="@+id/majorIdTitle"
                android:textSize="16sp"
                android:textColor="@color/material_grey_900"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000000"
                android:id="@+id/majorId"
                android:textSize="16sp"
                android:textColor="@color/material_grey_900"
                android:paddingStart="8dp"
                android:minWidth="80dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="160dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minor:"
                android:id="@+id/minorIdTitle"
                android:textSize="16sp"
                android:textColor="@color/material_grey_900"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000000"
                android:id="@+id/minorId"
                android:textSize="16sp"
                android:textColor="@color/material_grey_900"
                android:paddingStart="8dp"
                android:minWidth="80dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="160dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSSI:"
                android:id="@+id/rssiTitle"
                android:textSize="16sp"
                android:textColor="@color/material_grey_900"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000 dBm"
                android:id="@+id/rssi"
                android:textSize="16sp"
                android:textColor="@color/material_grey_900"
                android:paddingStart="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="160dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TxPower:"
                android:id="@+id/txPowerTitle"
                android:textSize="16sp"
                android:textColor="@color/material_grey_900"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000 dBm"
                android:id="@+id/txPower"
                android:textSize="16sp"
                android:textColor="@color/material_grey_900"
                android:paddingStart="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="160dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accuracy:"
                android:id="@+id/accuracyTitle"
                android:textSize="16sp"
                android:textColor="@color/material_grey_900"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00 m"
                android:id="@+id/accuracy"
                android:textSize="16sp"
                android:textColor="@color/material_grey_900"
                android:paddingStart="8dp"
                android:minWidth="80dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="160dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proximity:"
                android:id="@+id/proximityTitle"
                android:textSize="16sp"
                android:textColor="@color/material_grey_900"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"
                android:id="@+id/proximity"
                android:textSize="16sp"
                android:textColor="@color/material_grey_900"
                android:paddingStart="8dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>